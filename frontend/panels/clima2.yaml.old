type: vertical-stack
cards:
  - type: horizontal-stack
    cards:
      - type: 'custom:button-card'
        entity: input_boolean.heater_auto
        layout: vertical
        template: no_background
        name: Programma 1
        label: ' '
        icon: 'mdi:hours-24'
        show_icon: false
        show_label: false
        show_name: true
        show_state: false
        styles:
          
          state:
            - font-size: 120%
            - font-weight: bold
            - justify-self: center
            - color: var(--paper-item-icon-active-color)
          label:
            - justify-self: center
            - font-size: 120%
            - font-weight: bold
            - color: var(--paper-item-icon-active-color)
          name:
            - justify-self: left
            - padding-left: 24px
            - font-size: 120%
            - font-weight: bold
        tap_action:
          action: none
      - type: entities
        entities: 
          - entity: input_number.temperature_period1
            template: no_background
            name: Temp comfort
            show_icon: false
            show_state: true
